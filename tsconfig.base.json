{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "strict": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@ossts/codegen": ["libs/codegen/main/src/index.ts"],
      "@ossts/codegen/common": ["libs/codegen/common/src/index.ts"],
      "@ossts/codegen/core": ["libs/codegen/core/src/index.ts"],
      "@ossts/codegen/parsers/graphql/v1": [
        "libs/codegen/parsers/graphql/v1/src/index.ts"
      ],
      "@ossts/codegen/parsers/openapi/v3": [
        "libs/codegen/parsers/openapi/v3/src/index.ts"
      ],
      "@ossts/shared/typescript/helper-types": [
        "libs/shared/typescript/helper-types/src/index.ts"
      ]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
